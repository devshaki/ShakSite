{
  "name": "shaksite-monorepo",
  "version": "1.0.0",
  "description": "ShakSite - Class Schedule Application",
  "private": true,
  "workspaces": [
    "frontend",
    "backend"
  ],
  "scripts": {
    "install:frontend": "cd frontend && npm install",
    "install:backend": "cd backend && npm install",
    "build:frontend": "cd frontend && npm install && npm run build -- --configuration production",
    "build:backend": "cd backend && npm install && npm run build",
    "start:backend": "cd backend && npm run start:prod"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  }
}
